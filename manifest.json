{
  "manifest_version": 3,
  "name": "YouTube Studio Comment Helper",
  "version": "0.1.1",
  "description": "Access commenter info inside closed Shadow DOM on YouTube Studio and YouTube main site.",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://studio.youtube.com/*",
    "https://www.youtube.com/*"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://studio.youtube.com/*", "https://www.youtube.com/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "YT Studio Comment Helper"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/inject/patch.js",
        "src/inject/app.js"
      ],
      "matches": ["https://studio.youtube.com/*", "https://www.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
