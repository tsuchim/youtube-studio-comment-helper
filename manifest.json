{
  "manifest_version": 3,
  "name": "YouTube Studio Comment Helper",
  "version": "0.2.1",
  "description": "Clean handle-to-displayName replacement for YouTube Studio and main site.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://studio.youtube.com/*",
    "https://www.youtube.com/*"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://studio.youtube.com/*", "https://www.youtube.com/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject/app.js", "pr-test.js"],
      "matches": ["https://studio.youtube.com/*", "https://www.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
